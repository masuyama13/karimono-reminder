<h1>かりもの</h1>
<%= link_to '追加する', new_borrowing_thing_path %>

<table>
  <thead>
    <tr>
      <th>名称</th>
      <th>相手</th>
      <th>貸借日</th>
      <th>個別通知日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @borrowing_things.each do |borrowing_thing| %>
      <tr>
        <td><%= borrowing_thing.name %></td>
        <td><%= borrowing_thing.borrow_from %></td>
        <td>
          <% if borrowing_thing.borrowed_on %>
            <%= borrowing_thing.borrowed_on %>
          <% else %>
            -
          <% end %>
        </td>
        <td>
          <% if borrowing_thing.remind_on %>
            <%= borrowing_thing.remind_on %>
          <% else %>
            off
          <% end %>
        </td>
        <td><%= link_to '編集', edit_borrowing_thing_path(borrowing_thing) %></td>
        <td><%= link_to '削除', borrowing_thing, method: :delete, data: { confirm: '削除してよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
